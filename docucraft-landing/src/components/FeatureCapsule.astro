---
import CustomIcon from "./CustomIcon.astro";

interface Props {
  icon: string;
  size?: string;
  weight?: string;
  title: string;
  path: string;
}

const { icon, size = "24px", weight = "regular", title, path } = Astro.props;
---

<div class="feature-capsule">
  <CustomIcon icon={icon} size={size} weight={weight} path={path} />
  <h2 class="text-[#101519] text-base font-bold leading-tight">{title}</h2>
</div>
