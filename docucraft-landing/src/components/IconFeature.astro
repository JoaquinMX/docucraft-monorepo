---
interface Props {
  dataIcon: string;
  path: string;
  title: string;
}

const { dataIcon, path, title } = Astro.props;
---

<div class="feature-capsule">
  <div
    class="text-[#0d151c]"
    data-icon={dataIcon}
    data-size="24px"
    data-weight="regular"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24px"
      height="24px"
      fill="currentColor"
      viewBox="0 0 256 256"
    >
      <path d={path}></path>
    </svg>
  </div>
  <h2 class="text-[#0d151c] text-base font-bold leading-tight">
    {title}
  </h2>
</div>
