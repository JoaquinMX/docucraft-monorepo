---
import CustomH1 from "@/components/CustomH1.astro";
import MainLayout from "@layouts/MainLayout.astro";
import PricingCard from "@/components/PricingCard.astro";
import ComparisonTable from "@/components/ComparisonTable.astro";
---

<MainLayout>
  <div class="px-4 lg:px-40 flex flex-1 justify-center py-5">
    <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
      <CustomH1 title="Simple, transparent pricing" />
      <div
        class="grid grid-cols-[repeat(auto-fit,minmax(228px,1fr))] gap-2.5 px-4 py-3 @3xl:grid-cols-4"
      >
        <PricingCard
          title="Free"
          price="$0"
          period="per month"
          buttonText="Get started"
          buttonClass="btn-secondary"
          features={[
            "Unlimited public docs",
            "Unlimited private docs",
            "Unlimited team members",
            "Unlimited projects",
            "Community support"
          ]}
        />
        <PricingCard
          title="Pro"
          badge="Most popular"
          price="$19"
          period="per month"
          buttonText="Get started"
          buttonClass="btn-secondary"
          features={[
            "Unlimited public docs",
            "Unlimited private docs",
            "Unlimited team members",
            "Unlimited projects",
            "Community support",
            "Priority support",
            "Advanced analytics",
            "Custom branding"
          ]}
        />
        <PricingCard
          title="Enterprise"
          price="Contact us"
          buttonText="Contact sales"
          buttonClass="btn-secondary"
          features={[
            "Unlimited public docs",
            "Unlimited private docs",
            "Unlimited team members",
            "Unlimited projects",
            "Community support",
            "Priority support",
            "Advanced analytics",
            "Custom branding",
            "Dedicated support",
            "Custom integrations"
          ]}
        />
      </div>
      <h2
        class="text-[#0d151c] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5"
      >
        Compare features
      </h2>
      <ComparisonTable
        headers={["Feature", "Free", "Pro", "Enterprise"]}
        rows={[
          { feature: "Public documentation", free: "Unlimited", pro: "Unlimited", enterprise: "Unlimited" },
          { feature: "Private documentation", free: "Unlimited", pro: "Unlimited", enterprise: "Unlimited" },
          { feature: "Team members", free: "Unlimited", pro: "Unlimited", enterprise: "Unlimited" },
          { feature: "Projects", free: "Unlimited", pro: "Unlimited", enterprise: "Unlimited" },
          { feature: "Community support", free: "Included", pro: "Included", enterprise: "Included" },
          { feature: "Priority support", free: "Not included", pro: "Included", enterprise: "Included" },
          { feature: "Advanced analytics", free: "Not included", pro: "Included", enterprise: "Included" },
          { feature: "Custom branding", free: "Not included", pro: "Included", enterprise: "Included" },
          { feature: "Dedicated support", free: "Not included", pro: "Not included", enterprise: "Included" },
          { feature: "Custom integrations", free: "Not included", pro: "Not included", enterprise: "Included" }
        ]}
      />
    </div>
  </div>
</MainLayout>
