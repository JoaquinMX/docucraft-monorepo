---
import MainLayout from "@layouts/MainLayout.astro";
import PricingCard from "@/components/PricingCard.astro";
import FAQItem from "@/components/FAQItem.astro";
import IconFeature from "@/components/IconFeature.astro";
import PricingGrid from "@/components/PricingGrid.astro";
---

<MainLayout>
  <div class="px-4 lg:px-40 flex flex-1 justify-center py-5">
    <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
      <div class="@container">
        <div
          class="flex flex-col gap-6 px-4 py-10 @[480px]:gap-8 @[864px]:flex-row"
        >
          <div
            class="w-full bg-center bg-no-repeat aspect-video bg-cover rounded-lg @[480px]:h-auto @[480px]:min-w-[400px] @[864px]:w-full"
            style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuDijrMr3tVtH0Q46scwSwv9IcK8mQYm4TfIM7keHbMFmUcE1Zj-2KmMK5oBLHTI-N6i4VplYM6fkhxfXs_G2EvHK_6xncSwiTjqDRF0flKTncB_r1zItUlyQFQHX75D2Lf5dTEChLjKRb6LdLO9LAjiJu8WSuPDi_BSJ4FdPEyCKy41xKP0Wx4ctz-98GkfIiCf4QaOhnK8KHxTGc7nqjuNzIQqySfjpP2edoNE7z5DGi1kwpcbRJT2KmyoUeR2aAhhINZ9ZdEDpw");'
          >
          </div>
          <div
            class="flex flex-col gap-6 @[480px]:min-w-[400px] @[480px]:gap-8 @[864px]:justify-center"
          >
            <div class="flex flex-col gap-2 text-left">
              <h1
                class="text-[#0d151c] text-4xl font-black leading-tight tracking-[-0.033em] @[480px]:text-5xl @[480px]:font-black @[480px]:leading-tight @[480px]:tracking-[-0.033em]"
              >
                Go From Idea to Project Kick-off, Instantly.
              </h1>
              <h2
                class="text-[#0d151c] text-sm font-normal leading-normal @[480px]:text-base @[480px]:font-normal @[480px]:leading-normal"
              >
                Our AI-guided workflow helps you define your project's scope,
                architecture, and tasks, generating all the initial
                documentation you need to start building.
              </h2>
            </div>
            <a
              href="https://app-docucraft.joaquinmx.com/"
              class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 @[480px]:h-12 @[480px]:px-5 btn btn-primary"
            >
              <span class="truncate">Start Your First Project</span>
            </a>
          </div>
        </div>
      </div>
      <h2
        class="text-[#0d151c] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5"
      >
        Get Documented in 3 Simple Steps
      </h2>
      <div
        class="grid grid-cols-[repeat(auto-fit,minmax(158px,1fr))] gap-3 p-4"
      >
        <IconFeature
          dataIcon="ListChecks"
          path="M224,128a8,8,0,0,1-8,8H128a8,8,0,0,1,0-16h88A8,8,0,0,1,224,128ZM128,72h88a8,8,0,0,0,0-16H128a8,8,0,0,0,0,16Zm88,112H128a8,8,0,0,0,0,16h88a8,8,0,0,0,0-16ZM82.34,42.34,56,68.69,45.66,58.34A8,8,0,0,0,34.34,69.66l16,16a8,8,0,0,0,11.32,0l32-32A8,8,0,0,0,82.34,42.34Zm0,64L56,132.69,45.66,122.34a8,8,0,0,0-11.32,11.32l16,16a8,8,0,0,0,11.32,0l32-32a8,8,0,0,0-11.32-11.32Zm0,64L56,196.69,45.66,186.34a8,8,0,0,0-11.32,11.32l16,16a8,8,0,0,0,11.32,0l32-32a8,8,0,0,0-11.32-11.32Z"
          title="Answer Questions"
        />
        <IconFeature
          dataIcon="File"
          path="M213.66,82.34l-56-56A8,8,0,0,0,152,24H56A16,16,0,0,0,40,40V216a16,16,0,0,0,16,16H200a16,16,0,0,0,16-16V88A8,8,0,0,0,213.66,82.34ZM160,51.31,188.69,80H160ZM200,216H56V40h88V88a8,8,0,0,0,8,8h48V216Z"
          title="Select Documents"
        />
        <IconFeature
          dataIcon="DownloadSimple"
          path="M224,152v56a16,16,0,0,1-16,16H48a16,16,0,0,1-16-16V152a8,8,0,0,1,16,0v56H208V152a8,8,0,0,1,16,0Zm-101.66,5.66a8,8,0,0,0,11.32,0l40-40a8,8,0,0,0-11.32-11.32L136,132.69V40a8,8,0,0,0-16,0v92.69L93.66,106.34a8,8,0,0,0-11.32,11.32Z"
          title="Generate &amp; Export"
        />
      </div>
      <h2
        class="text-[#0d151c] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5"
      >
        Everything You Need to Start Building
      </h2>
      <div
        class="grid grid-cols-[repeat(auto-fit,minmax(158px,1fr))] gap-3 p-4"
      >
        <IconFeature
          dataIcon="TreeStructure"
          path="M168,112h48a16,16,0,0,0,16-16V48a16,16,0,0,0-16-16H168a16,16,0,0,0-16,16V64h-8a32,32,0,0,0-32,32v24H80v-8A16,16,0,0,0,64,96H32a16,16,0,0,0-16,16v32a16,16,0,0,0,16,16H64a16,16,0,0,0,16-16v-8h32v24a32,32,0,0,0,32,32h8v16a16,16,0,0,0,16,16h48a16,16,0,0,0,16-16V160a16,16,0,0,0-16-16H168a16,16,0,0,0-16,16v16h-8a16,16,0,0,1-16-16V96a16,16,0,0,1,16-16h8V96A16,16,0,0,0,168,112ZM64,144H32V112H64v32Zm104,16h48v48H168Zm0-112h48V96H168Z"
          title="AI-Powered Diagrams"
        />
        <IconFeature
          dataIcon="ChartLine"
          path="M232,208a8,8,0,0,1-8,8H32a8,8,0,0,1-8-8V48a8,8,0,0,1,16,0v94.37L90.73,98a8,8,0,0,1,10.07-.38l58.81,44.11L218.73,90a8,8,0,1,1,10.54,12l-64,56a8,8,0,0,1-10.07.38L96.39,114.29,40,163.63V200H224A8,8,0,0,1,232,208Z"
          title="Automated Gantt Charts"
        />
        <IconFeature
          dataIcon="Code"
          path="M69.12,94.15,28.5,128l40.62,33.85a8,8,0,1,1-10.24,12.29l-48-40a8,8,0,0,1,0-12.29l48-40a8,8,0,0,1,10.24,12.3Zm176,27.7-48-40a8,8,0,1,0-10.24,12.3L227.5,128l-40.62,33.85a8,8,0,1,0,10.24,12.29l48-40a8,8,0,0,0,0-12.29ZM162.73,32.48a8,8,0,0,0-10.25,4.79l-64,176a8,8,0,0,0,4.79,10.26A8.14,8.14,0,0,0,96,224a8,8,0,0,0,7.52-5.27l64-176A8,8,0,0,0,162.73,32.48Z"
          title="Mermaid Code Generation"
        />
      </div>
      <div class="flex px-4 py-3 justify-center">
        <a
          href="/features"
          class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 btn btn-secondary"
        >
          <span class="truncate">See All Features</span>
        </a>
      </div>
      <h2
        class="text-[#0d151c] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5"
      >
        Choose the Plan That's Right For You
      </h2>
      <PricingGrid>
        <PricingCard
          title="Trial"
          price="Free"
          buttonText="Start Trial"
          buttonClass="btn-secondary"
          href="https://app-docucraft.joaquinmx.com/"
          features={[
            "1 Free Project",
            "Use your own API keys"
          ]}
        />
        <PricingCard
          title="Pro"
          badge="Most Popular"
          price="$29"
          period="/month"
          buttonText="Go Pro"
          buttonClass="btn-primary"
          href="/pricing"
          features={[
            "30 Projects/Month",
            "Full Mermaid Code Access",
            "Pay-as-you-go option"
          ]}
        />
        <PricingCard
          title="Teams"
          price="Contact"
          buttonText="Contact Sales"
          buttonClass="btn-secondary"
          href="mailto:sales@docucraft.com"
          features={[
            "Collaborative Tools",
            "Dedicated Support"
          ]}
        />
      </PricingGrid>
      <h2
        class="text-[#0d151c] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5"
      >
        Frequently Asked Questions
      </h2>
      <div class="flex flex-col p-4 gap-3">
        <FAQItem
          question="What types of projects can I document?"
          answer="You can document a wide range of software projects, including web applications, mobile apps, APIs, and more. Our tool is flexible and adaptable to various project types and complexities."
          open={true}
        />
        <FAQItem
          question="How does the AI-guided workflow work?"
          answer="You can document a wide range of software projects, including web applications, mobile apps, APIs, and more. Our tool is flexible and adaptable to various project types and complexities."
        />
        <FAQItem
          question="What is Mermaid code?"
          answer="You can document a wide range of software projects, including web applications, mobile apps, APIs, and more. Our tool is flexible and adaptable to various project types and complexities."
        />
      </div>
    </div>
  </div>
</MainLayout>
