---
import "@styles/global.css";
import { ClientRouter } from "astro:transitions";
import AuthHeader from "@/components/AuthHeader.astro";
---

<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="" />
    <link
      rel="stylesheet"
      as="style"
      onload="this.rel='stylesheet'"
      href="https://fonts.googleapis.com/css2?display=swap&family=Manrope%3Awght%40400%3B500%3B700%3B800&family=Noto+Sans%3Awght%40400%3B500%3B700%3B900"
    />
    <!-- Temporarily disabled New Relic for debugging -->
    <!-- <script type="text/javascript" src="/scripts/new-relic-agent.js"></script> -->
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Docucraft</title>
    <ClientRouter />
    <script type="module">
      import mermaid from "https://cdn.jsdelivr.net/npm/mermaid@11/dist/mermaid.esm.min.mjs";
      mermaid.initialize({ startOnLoad: true });
    </script>
  </head>
  <body
    class="relative flex size-full min-h-screen flex-col bg-[#101a23] dark group/design-root overflow-x-hidden"
    style='font-family: Manrope, "Noto Sans", sans-serif;'
  >
    <AuthHeader />
    <slot />
  </body>
</html>
