---
interface Props {
  size?: "sm" | "md" | "lg";
  text?: string;
}

const { size = "md", text = "Loading..." } = Astro.props;

const sizeClasses = {
  sm: "h-4 w-4",
  md: "h-8 w-8",
  lg: "h-12 w-12",
};
---

<div class="flex flex-col items-center justify-center py-8">
  <div
    class={`animate-spin rounded-full border-b-2 border-[#0c77f2] ${sizeClasses[size]} mb-4`}
  >
  </div>
  {text && <p class="text-gray-300 text-sm">{text}</p>}
</div>

